<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinner_dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/button_roll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_dice"
        android:layout_marginTop="58dp"
        android:backgroundTint="@color/light_pink"
        android:text="Roll"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/check_box_roll_twice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_roll"
        android:layout_marginTop="26dp"
        android:text="Roll Twice"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_box_roll_twice"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/light_pink"
        android:text="Clear"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_view_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_clear"
        android:layout_marginTop="42dp"
        android:textColor="@color/white"
        android:textSize="24sp" />

</RelativeLayout>
